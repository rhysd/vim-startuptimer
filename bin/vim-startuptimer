#!/usr/bin/env ruby

$LOAD_PATH << '../lib'

require 'vim-startuptimer'
require 'optparse'

# default values
vim = "vim"
result = "vim-startuptime"

opt = OptionParser.new

# define options
opt.on('--vim VIM'){|v| vim = v}
opt.on('--result RESULT'){|r| result = r}

opt.parse!(ARGV)

runner = VimStartuptimer::Runner.new vim
